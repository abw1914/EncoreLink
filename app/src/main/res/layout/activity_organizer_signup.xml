<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizerSignup"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/encore_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingTop="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/encorelink_logo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_input_organizer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Email Label -->
        <EditText
            android:id="@+id/input_organizer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_organizer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Password Label -->
        <EditText
            android:id="@+id/input_organizer_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password"
            />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/button_organizer_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Create user!"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        />


</LinearLayout>