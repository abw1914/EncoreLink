<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/encore_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingTop="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/encorelink_logo" />

    <Switch
        android:id="@+id/user_type_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSwitchClicked"
        android:textOn="Musician"
        android:textOff="Organzer"
        android:showText="true"
        android:splitTrack="true"
        android:thumbTint="@color/common_google_signin_btn_text_light_disabled"
        android:switchTextAppearance="@style/Base.TextAppearance.AppCompat"

        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_input_organizer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Email Label -->
        <EditText
            android:id="@+id/input_organizer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_organizer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Password Label -->
        <EditText
            android:id="@+id/input_organizer_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password"
            />

    </android.support.design.widget.TextInputLayout>




    <Button
        android:id="@+id/button_organizer_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Create user!"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="OR"
        android:textIsSelectable="false"
        android:textAllCaps="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_organizer_google_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign Up With Google"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/button_organizer_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign Up With Facebook"
        android:textColor="#FFFFFF" />


</LinearLayout>